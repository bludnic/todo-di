$footer-color := #FFF
$footer-background-color := #2d2d2d

.footer {
  color: $footer-color
  background-color: $footer-background-color
  padding-top: 16px
  padding-bottom: 16px
  margin-top: 32px
  
  h1, h2, h3, h4, h5, h6 {
    color: inherit
    font-weight: 700
    text-transform: uppercase
    margin-bottom: 8px
  }
  
  a {
    color: inherit
    text-decoration: none
    opacity: 0.8
 
    &:hover {
      opacity: 1
    }
  }
}