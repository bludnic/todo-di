$snackbar-color := #FFF
$snackbar-background-color := #2c2c2c

.snackbar {
  background-color: $snackbar-background-color
  color: $snackbar-color
  width: 320px
  font-size: 16px
  position: fixed
  bottom: 0
  z-index: 10
  left: 50%
  margin-left: -100px
  border-top-left-radius: 4px
  border-top-right-radius: 4px
  display: none

  &__content {
    text-align: center
    padding: 8px 16px
  }
  
  &--active {
    display: block
  }
}